<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="@dimen/margin_5"
    android:background="@android:color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/margin_5"
        android:text="@string/title_create_account"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="@dimen/size_logo"
        android:layout_height="@dimen/size_logo"
        android:layout_marginTop="@dimen/margin_20"
        android:src="@drawable/logo2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginEnd="@dimen/margin_5"
        android:layout_weight="3"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginTop="@dimen/margin_5"
            android:text="@string/first_name_account"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_first_name"
            android:layout_width="0dp"
            android:layout_height="@dimen/margin_40"
            android:layout_weight="3"
            android:background="@drawable/button"
            android:inputType="textPersonName"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/black"
            android:textColorLink="@color/black"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:layout_marginEnd="@dimen/margin_5"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginTop="@dimen/margin_5"
            android:text="@string/last_name_account"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_last_name"
            android:layout_width="0dp"
            android:layout_height="@dimen/margin_40"
            android:layout_weight="3"
            android:background="@drawable/button"
            android:inputType="textPersonName"
            android:layout_marginTop="@dimen/margin_5"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/black"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:layout_marginEnd="@dimen/margin_5"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginTop="@dimen/margin_5"
            android:text="@string/phone_account"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="0dp"
            android:layout_height="@dimen/margin_40"
            android:layout_weight="3"
            android:background="@drawable/button"
            android:inputType="phone"
            android:layout_marginTop="@dimen/margin_5"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/black"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:layout_marginEnd="@dimen/margin_5"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginTop="@dimen/margin_5"
            android:text="@string/email_account"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_email"
            android:layout_width="0dp"
            android:layout_height="@dimen/margin_40"
            android:layout_weight="3"
            android:background="@drawable/button"
            android:inputType="textEmailAddress"
            android:layout_marginTop="@dimen/margin_5"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/black"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:layout_marginEnd="@dimen/margin_5"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginTop="@dimen/margin_5"
            android:text="@string/password_account"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="0dp"
            android:layout_height="@dimen/margin_40"
            android:layout_weight="3"
            android:background="@drawable/button"
            android:inputType="textPassword"
            android:layout_marginTop="@dimen/margin_5"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/black"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:layout_marginEnd="@dimen/margin_5"
        android:layout_marginTop="2dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:lines="3"
            android:layout_marginTop="@dimen/margin_5"
            android:text="@string/ci_account"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_ci"
            android:layout_width="0dp"
            android:layout_height="@dimen/margin_40"
            android:layout_weight="3"
            android:background="@drawable/button"
            android:inputType="text"
            android:layout_marginTop="@dimen/margin_5"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/black"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:layout_marginTop="-3dp"
        android:layout_marginEnd="@dimen/margin_5"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/country_account"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_country"
            android:layout_width="0dp"
            android:layout_height="@dimen/margin_40"
            android:layout_weight="3"
            android:background="@drawable/button"
            android:inputType="text"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/black"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:layout_marginEnd="@dimen/margin_5"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginTop="@dimen/margin_5"
            android:text="@string/city_account"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_city"
            android:layout_width="0dp"
            android:layout_height="@dimen/margin_40"
            android:layout_weight="3"
            android:background="@drawable/button"
            android:inputType="text"
            android:layout_marginTop="@dimen/margin_5"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/black"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:layout_marginEnd="@dimen/margin_5"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginTop="@dimen/margin_5"
            android:text="@string/address_account"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_address"
            android:layout_width="0dp"
            android:layout_height="@dimen/margin_40"
            android:layout_weight="3"
            android:background="@drawable/button"
            
            android:inputType="text"
            android:layout_marginTop="@dimen/margin_5"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/black"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_create_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10"
        android:background="@drawable/button"
        android:backgroundTint="@android:color/darker_gray"
        android:padding="@dimen/margin_5"
        android:layout_gravity="center"
        android:text="@string/create_account"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"/>

</LinearLayout>