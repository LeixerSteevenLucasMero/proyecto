<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/amarante"
            android:text="@string/account_settings"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="25sp"/>

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="@dimen/margin_200"
            android:layout_height="@dimen/margin_200"
            android:src="@drawable/edit"/>

        <LinearLayout
            android:id="@+id/ll_sing_up"
            android:layout_width="@dimen/margin_320"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_20"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/margin_5">

            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/margin_40"
                android:layout_weight="3"
                android:background="@drawable/button"
                android:enabled="false"
                android:gravity="center"
                android:fontFamily="@font/amarante"
                android:singleLine="true"
                android:text="@string/update_user_settings"
                android:textColor="@color/black"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

            <ImageView
                android:id="@+id/iv_update_user"
                android:layout_width="0dp"
                android:layout_height="@dimen/margin_40"
                android:layout_weight="1"
                android:src="@drawable/next"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/margin_320"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_20"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/margin_5">

            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/margin_70"
                android:layout_weight="3"
                android:background="@drawable/button"
                android:enabled="false"
                android:gravity="center"
                android:lines="2"
                android:ems="3"
                android:fontFamily="@font/amarante"
                android:text="@string/update_data_car_settings"
                android:textColor="@color/black"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

            <ImageView
                android:id="@+id/iv_update_car"
                android:layout_width="0dp"
                android:layout_height="@dimen/margin_40"
                android:layout_weight="1"
                android:src="@drawable/next"/>

        </LinearLayout>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>